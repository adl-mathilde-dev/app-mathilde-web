{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],                    // Para importar con ~/...
      "@components/*": ["app/components/*"],
      "@utils/*": ["app/utils/*"],
      "@hooks/*": ["app/hooks/*"],
      "@assets/*": ["app/assets/*"],
      "@pages/*": ["app/pages/*"],
      "@domain/*": ["app/domain/*"],
      "@styles/*": ["app/styles/*"],    
      "@services/*": ["app/services/*"],    
      "@schema/*": ["app/schema/*"],   
      "@store/*": ["app/store/*"],
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
